<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Be My Valentine?</title>
  <style>
    :root{
      --bg1:#ffe3ec;
      --bg2:#fff7fb;
      --card:#ffffffcc;
      --text:#2b2b2b;
      --pink:#ff4d8d;
      --pink2:#ff7bb2;
      --shadow: 0 18px 50px rgba(0,0,0,.12);
    }

    *{ box-sizing:border-box; }
    body{
      margin:0;
      min-height:100vh;
      display:grid;
      place-items:center;
      font-family: ui-rounded, system-ui, -apple-system, Segoe UI, Roboto, Helvetica, Arial, "Apple Color Emoji","Segoe UI Emoji";
      color:var(--text);
      background:
        radial-gradient(1200px 700px at 20% 20%, var(--bg2), transparent 60%),
        radial-gradient(900px 600px at 80% 30%, #ffd1e2, transparent 60%),
        linear-gradient(135deg, var(--bg1), var(--bg2));
      overflow:hidden;
    }

    /* floating hearts */
    .hearts span{
      position:absolute;
      bottom:-40px;
      left:var(--x);
      font-size:var(--s);
      opacity:.75;
      animation: floatUp var(--t) linear infinite;
      filter: drop-shadow(0 8px 10px rgba(0,0,0,.08));
      user-select:none;
      pointer-events:none;
    }
    @keyframes floatUp{
      from { transform: translateY(0) translateX(0) rotate(0deg); }
      to   { transform: translateY(-120vh) translateX(var(--drift)) rotate(22deg); }
    }

    .card{
      width:min(520px, 92vw);
      padding:28px 22px;
      border-radius:26px;
      background:var(--card);
      backdrop-filter: blur(10px);
      box-shadow: var(--shadow);
      border: 1px solid rgba(255,255,255,.7);
      position:relative;
      text-align:center;
    }

    h1{
      margin:4px 0 10px;
      font-size: clamp(26px, 4.4vw, 42px);
      letter-spacing:.2px;
    }

    p{
      margin: 0 0 18px;
      opacity:.85;
      font-size: clamp(14px, 2.6vw, 17px);
    }

    .buttons-area{
      position:relative;
      height: 160px;  /* space for the runaway button */
      margin-top: 8px;
    }

    button{
      border:0;
      padding: 14px 20px;
      border-radius: 999px;
      font-weight: 700;
      font-size: 16px;
      cursor:pointer;
      box-shadow: 0 10px 22px rgba(0,0,0,.12);
      transition: transform .12s ease, filter .12s ease;
      -webkit-tap-highlight-color: transparent;
      user-select:none;
      touch-action: manipulation;
    }
    button:active{ transform: scale(.98); }

    #yesBtn{
      background: linear-gradient(135deg, var(--pink), var(--pink2));
      color:white;
      position:absolute;
      left: 50%;
      top: 40px;
      transform: translateX(-115%);
    }
    #yesBtn:hover{ filter: brightness(1.03); transform: translateX(-115%) scale(1.03); }

    #noBtn{
      background: #ffffff;
      color:#444;
      position:absolute;
      left: 50%;
      top: 40px;
      transform: translateX(15%);
      border: 1px solid rgba(0,0,0,.08);
    }
    #noBtn:hover{ transform: translateX(15%) scale(1.03); }

    .result{
      display:none;
      margin-top: 10px;
      padding: 14px 16px;
      border-radius: 16px;
      background: rgba(255,255,255,.7);
      border: 1px dashed rgba(255,77,141,.35);
    }
    .result strong{ color: var(--pink); }

    .tiny{
      margin-top: 14px;
      font-size: 12px;
      opacity:.6;
    }

    /* confetti */
    .confetti{
      position:absolute;
      inset:0;
      pointer-events:none;
      overflow:hidden;
      border-radius:26px;
    }
    .confetti i{
      position:absolute;
      top:-12px;
      width:10px;
      height:14px;
      border-radius:3px;
      opacity:.95;
      animation: confettiFall 1.6s ease-in forwards;
    }
    @keyframes confettiFall{
      to{
        transform: translateY(220px) rotate(420deg);
        opacity: 0;
      }
    }
