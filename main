<body>
  <div class="hearts" aria-hidden="true"></div>

  <main class="card" id="card">
    <h1>Will you be my valentine? üíñ</h1>
    <p>There is only one correct answer‚Ä¶ üòå</p>

    <div class="buttons-area" id="arena">
      <button id="yesBtn">YES!!! üíò</button>
      <button id="noBtn">no üò∂</button>
    </div>

    <div class="result" id="result">
      <div style="font-size:22px;">YAYYYYY ü•πüíû</div>
      <div>Ok cool so‚Ä¶ it‚Äôs official: <strong>we‚Äôre valentines</strong> üò§‚ú®</div>
    </div>

    <div class="tiny">Tip: try to click ‚Äúno‚Äù üòà</div>

    <div class="confetti" id="confetti"></div>
  </main>

  <script>
    // ---------- floating background hearts ----------
    const hearts = document.querySelector(".hearts");
    const heartChars = ["üíó","üíñ","üíò","üíù","üíï"];
    for (let i = 0; i < 18; i++) {
      const s = document.createElement("span");
      s.textContent = heartChars[Math.floor(Math.random()*heartChars.length)];
      s.style.setProperty("--x", Math.floor(Math.random()*100) + "vw");
      s.style.setProperty("--s", (12 + Math.random()*20) + "px");
      s.style.setProperty("--t", (7 + Math.random()*10) + "s");
      s.style.setProperty("--drift", (Math.random()*120 - 60) + "px");
      s.style.animationDelay = (-Math.random()*12) + "s";
      hearts.appendChild(s);
    }

    // ---------- runaway button logic ----------
    const arena = document.getElementById("arena");
    const noBtn  = document.getElementById("noBtn");
    const yesBtn = document.getElementById("yesBtn");
    const result = document.getElementById("result");
    const confettiLayer = document.getElementById("confetti");

    function clamp(n, min, max){ return Math.max(min, Math.min(max, n)); }

    function moveNoButton() {
      const aRect = arena.getBoundingClientRect();
      const bRect = noBtn.getBoundingClientRect();

      const padding = 10;
      const maxX = aRect.width - bRect.width - padding;
      const maxY = aRect.height - bRect.height - padding;

      // Random but biased away from current position to feel "dodgy"
      const currentLeft = noBtn.offsetLeft;
      const currentTop  = noBtn.offsetTop;

      let x = Math.random() * maxX;
      let y = Math.random() * maxY;

      // If it didn't move much, push it farther
      if (Math.abs(x - currentLeft) < 80) x = clamp(x + (x < currentLeft ? -120 : 120), padding, maxX);
      if (Math.abs(y - currentTop)  < 60) y = clamp(y + (y < currentTop  ? -90  : 90),  padding, maxY);

      noBtn.style.left = x + "px";
      noBtn.style.top  = y + "px";
      noBtn.style.transform = "none";
    }

    // Set initial absolute positioning inside arena
    function initPositions(){
      // place YES nicely left-ish, NO right-ish
      yesBtn.style.left = "50%";
      yesBtn.style.top  = "40px";
      yesBtn.style.transform = "translateX(-115%)";

      noBtn.style.left  = "50%";
      noBtn.style.top   = "40px";
      noBtn.style.transform = "translateX(15%)";
    }
    initPositions();

    // Mouse: move away when cursor gets near
    const NEAR_DISTANCE = 90; // px
    arena.addEventListener("mousemove", (e) => {
      const b = noBtn.getBoundingClientRect();
      const cx = b.left + b.width/2;
      const cy = b.top  + b.height/2;
      const dx = e.clientX - cx;
      const dy = e.clientY - cy;
      const dist = Math.hypot(dx, dy);
      if (dist < NEAR_DISTANCE) moveNoButton();
    });

    // Touch/mobile: if you try to tap/click NO, it escapes
    // Use pointerdown so it fires before click is fully committed
    noBtn.addEventListener("pointerdown", (e) => {
      e.preventDefault();  // stops "click" from activating
      moveNoButton();
    });

    // Also if it somehow gets clicked, still move it (extra safety)
    noBtn.addEventListener("click", (e) => {
      e.preventDefault();
      moveNoButton();
    });

    // YES button: show result + confetti
    function popConfetti(){
      const colors = ["#ff4d8d","#ff7bb2","#ffd166","#8ecae6","#cdb4db","#b8f2e6"];
      const count = 40;
      const rect = arena.getBoundingClientRect();

      for (let i=0; i<count; i++){
        const p = document.createElement("i");
        p.style.left = (Math.random()*rect.width) + "px";
        p.style.background = colors[Math.floor(Math.random()*colors.length)];
        p.style.transform = `translateY(0) rotate(${Math.random()*180}deg)`;
        p.style.animationDuration = (1.1 + Math.random()*1.0) + "s";
        p.style.width = (7 + Math.random()*8) + "px";
        p.style.height = (9 + Math.random()*10) + "px";
        confettiLayer.appendChild(p);
        setTimeout(()=>p.remove(), 2200);
      }
    }

    yesBtn.addEventListener("click", () => {
      result.style.display = "block";
      popConfetti();
      // Disable the NO button for extra comedic effect (optional)
      noBtn.textContent = "too late üòå";
      noBtn.style.opacity = "0.6";
    });

    // If the window resizes, re-init so transforms don't look weird
    window.addEventListener("resize", () => {
      initPositions();
    });
  </script>
</body>
</html>
